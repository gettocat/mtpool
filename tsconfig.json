{
    "compilerOptions": {
        "incremental": true,
        "target": "es5",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./lib",
        "module": "CommonJS",
        "preserveConstEnums": true,
        "inlineSourceMap": true,
        "declaration": true,
        "declarationMap": true,
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "test"
    ]
}